@model List<Blog.Models.Post>

<table>
    <thead>
        <tr>
            <th>Título</th>
            <th>Resumo</th>
            <th>Categoria</th>
            <th>Publicado?</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td><a href="/Post/Visualizar/@post.Id">@post.Titulo</a></td>
                <td>@post.Resumo</td>
                <td>@post.Categoria</td>
                <td>
                    @if (post.Publicado)
                    {
                        @Html.Raw(string.Format("{0:dd/MM/yyyy}", post.DataPublicacao))
                    }
                    else
                    {
                        @Html.Raw("Não");
                    }
                </td>
                <td>
                    <a href="/Post/Remover/@post.Id">Remover</a>
                    <a href="/Post/PublicarPost/@post.Id">Publicar</a>
                </td>
            </tr>
        }
    </tbody>
</table>